<odoo>
    <data>

        <record model="ir.ui.view" id="sale_wizard_form">
            <field name="name">sale_wizard form</field>
            <field name="model">sale.wizard</field>
            <field name="arch" type="xml">
                <form string="Sale Wizard">
                    <group>
                        <group>
                            <field name="product_sale_id"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                        </group>
                    </group>
                    <footer>
                        <button name="create_so" string="Create SO" type="object"
                                class="btn-warning"/>
                        <button string="cancel" class="btn-info" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="sale_action_wizard">
            <field name="name">sale wizard Popup</field>
            <field name="res_model">sale.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!--  actions  -->

    </data>
</odoo>